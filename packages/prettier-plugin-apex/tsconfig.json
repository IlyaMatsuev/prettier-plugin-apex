{
  "extends": "./tsconfig.prod.json",
  "include": [
    "src/**/*",
    "bin/**/*",
    "scripts/**/*",
    "tests_config/**/*",
    "tests_integration/package/*",
    "tests/**/*",
    "typings/global.d.ts",
    "typings/test-global.d.ts",
    "vite.config.ts"
  ],
  "compilerOptions": {
    "lib": ["ES2023", "DOM"],
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSourceMap": false,
    "types": ["vite/client", "vitest/globals"]
  }
}
